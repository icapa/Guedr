<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.icapa.guedr.activity.SettingsActivity"
    android:orientation="vertical">



    <include layout="@layout/toolbar_main" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selecciona_unidades"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/units_rg"
        >

        <RadioButton
            android:text="@string/unidades_farenheit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/farenheit_rb"
            android:layout_weight="1" />

        <RadioButton
            android:text="@string/unidades_celsius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/celsius_rb"
            android:layout_weight="1" />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="end|bottom"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
            >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            android:id="@+id/cancel_btn"
            tools:ignore="ButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:id="@+id/accept_btn"
            tools:ignore="ButtonStyle"/>

    </LinearLayout>
</LinearLayout>
